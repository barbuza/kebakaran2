{
  "compilerOptions": {
    "outDir": "lib",
    "module": "commonjs",
    "target": "es5",
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "noEmitOnError": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "sourceMap": true,
    "removeComments": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "importHelpers": true,
    "types": [
      "jest",
      "node"
    ],
    "lib": [
      "es2015"
    ]
  },
  "exclude": [
    "node_modules",
    "tests",
    "lib"
  ]
}
