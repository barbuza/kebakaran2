{
  "compilerOptions": {
    "outDir": "dist",
    "module": "commonjs",
    "target": "es3",
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "noEmitOnError": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "sourceMap": true,
    "removeComments": true,
    "strictNullChecks": true,
    "noImplicitThis": true
  },
  "filesGlob": [
    "typings/",
    "lib/",
    "tests/"
  ]
}
